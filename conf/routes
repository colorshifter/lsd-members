# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.MembershipController.index
GET     /alt                        controllers.MembershipAltController.index
POST    /sign-up                    controllers.MembershipController.signup
POST    /sign-up-alt                controllers.MembershipAltController.signup
GET     /thank-you                  controllers.MembershipController.thankYou

# Admin

GET     /admin                      controllers.AdminController.index
GET     /admin/settings             controllers.AdminController.settings
POST    /admin/settings             controllers.AdminController.updateSettings
GET     /admin/members/:id          controllers.AdminController.member(id: Int)
GET     /admin/courses/:id          controllers.CourseController.view(id: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
